                                 <children>
                                    <ImageView fx:id="inputImageView" fitHeight="225.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                              </VBox>
                              <Button fx:id="selectInputImageButton" mnemonicParsing="false" onAction="#selectInputImage" text="Select image" />
