                                    <TextField fx:id="structuralSimilarityIndexThresholdTextField" onAction="#checkCompressButtonDisable" onKeyTyped="#checkCompressButtonDisable" promptText="Threshold" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Minimum Block Size" />
