                                 <children>
                                    <RadioButton fx:id="varianceButton" mnemonicParsing="false" onAction="#variance" text="Variance" />
                                    <TextField fx:id="varianceThresholdTextField" onAction="#checkCompressButtonDisable" onKeyTyped="#checkCompressButtonDisable" promptText="Threshold" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <RadioButton fx:id="meanAbsoluteDeviationButton" mnemonicParsing="false" onAction="#meanAbsoluteDeviation" text="Mean Absolute Deviation (MAD)" />
                                    <TextField fx:id="meanAbsoluteDeviationThresholdTextField" onAction="#checkCompressButtonDisable" onKeyTyped="#checkCompressButtonDisable" promptText="Threshold" />
                                 </children>
                              </VBox>
                              <VBox spacing="5.0">
                                 <children>
                                    <RadioButton fx:id="maxPixelDifferenceButton" mnemonicParsing="false" onAction="#maxPixelDifference" text="Max Pixel Difference" />
