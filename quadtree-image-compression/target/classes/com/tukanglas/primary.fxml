                                 <children>
                                    <ImageView fx:id="compressedImageView" fitHeight="225.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </children>
                              </VBox>
                              <Button fx:id="exportCompressedButton" mnemonicParsing="false" onAction="#exportCompressed" text="Export image" />
                              <Button fx:id="exportGifButton" mnemonicParsing="false" onAction="#exportGif" text="Export GIF" />
