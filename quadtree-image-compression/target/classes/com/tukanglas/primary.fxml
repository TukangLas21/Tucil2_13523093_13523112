                                    <HBox spacing="5.0">
                                       <children>
                                          <Label text="tree depth:" />
                                          <Label fx:id="compressedTreeDepthLabel" text="text" />
                                       </children>
                                    </HBox>
                                    <HBox spacing="5.0">
                                       <children>
                                          <Label text="node count:" />
                                          <Label fx:id="compressedNodeCountLabel" text="text" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox prefHeight="552.0" prefWidth="234.0" spacing="20.0">
